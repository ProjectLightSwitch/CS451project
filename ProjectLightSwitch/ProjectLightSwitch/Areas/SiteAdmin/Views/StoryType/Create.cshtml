@model ProjectLightSwitch.Models.StoryTypeCreationModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>

@{
    ViewBag.Title = "Home Page";
}
@section featured {
    <section class="featured"></section>
}

@section head {
    @Styles.Render("~/Content/tagnav")
    @Scripts.Render("~/bundles/tags")
}

@section scripts {

    <script language="javascript" type="text/javascript">


        $(document).ready(function () {
            (function () {
                var tagnav = new TagNavigator($('#tagnav'));
                var breadcrumbs = new SelectedTagBreadCrumbs($('#selectedTags'), tagnav, { cssPrefix: '', separator: ' > ', closable: true });

                var numInitialQuestions = 3;
                for (var i = 0; i < numInitialQuestions; i++) {
                    AddQuestionRow('questions', 'Add a Question:');
                }
            })();
        });


        var NumRows = 0;
        function AddQuestionRow(tableId, prompt) {
            $('<tr>').append(
                $('<td>').text(prompt)
            ).append(
                $('<td>').append(
                    $('<input>').attr('name', 'Questions[' + NumRows + ']'))
            ).appendTo($('#' + tableId));
            NumRows++;
        }
    </script>
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>StoryType</legend>
        <div class="editor-label">
            @Html.LabelFor(model => model.Description)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Description)
            @Html.ValidationMessageFor(model => model.Description)
        </div>

        <table id="questions"></table>
        <input type="button" value="Add Row" onclick="AddQuestionRow('questions', 'Add a question');" />
        <h3></h3>
        <div id="tagnav"></div>
        <h4>Current Tags:</h4>
        <div id="selectedTags"></div>
    </fieldset>

    <p>
        <input type="submit" value="Create" />
    </p>
}